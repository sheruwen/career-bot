# ===== 方案A：直接抓 104 公開搜尋資料（預設模式） =====
WEB104_API_URL=https://www.104.com.tw/jobs/search/api/jobs
WEB104_KEYWORD=產品經理
WEB104_AREA=6001001000
WEB104_PAGES=1
WEB104_ORDER=15
WEB104_ASC=0
WEB104_TIMEOUT=20

# ===== LINE Messaging API（推播到你自己的 LINE） =====
LINE_CHANNEL_ACCESS_TOKEN=
LINE_TO_USER_ID=
LINE_PUSH_ENDPOINT=https://api.line.me/v2/bot/message/push
LINE_TIMEOUT=20

# ===== Google Sheets（每天跑完自動 append） =====
GOOGLE_SHEETS_CREDENTIALS_FILE=/absolute/path/to/google_service_account.json
GOOGLE_SHEETS_SPREADSHEET_ID=
GOOGLE_SHEETS_WORKSHEET=Job List
GOOGLE_SHEETS_APPEND_HEADER=true

# ===== 方案B：若你未來有其他 API，仍可改用 --source api =====
JOB_API_URL=https://example.104.api/jobs
JOB_API_TOKEN=
JOB_API_QUERY=backend engineer
JOB_API_TIMEOUT=20

GOOGLE_SHEETS_CREATE_WORKSHEET_IF_MISSING=false
GOOGLE_SHEETS_HEADER_ROW=auto
